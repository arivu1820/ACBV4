<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background">


    <TextView
        android:id="@+id/title_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/metropolis"
        android:text="PREMIUM CARE SERVICE"
        android:textColor="@color/white"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"/>


    <ImageView
        android:id="@+id/slide_image"
        android:layout_width="208dp"
        android:layout_height="161dp"
        android:layout_alignStart="@+id/title_main"
        android:layout_alignEnd="@+id/title_main"
        android:layout_alignParentTop="true"
        app:layout_constraintEnd_toEndOf="@+id/title_main"
        app:layout_constraintStart_toStartOf="@+id/title_main"
        app:layout_constraintTop_toBottomOf="@+id/title_main"
        app:srcCompat="@drawable/fire"
        android:layout_marginTop="50dp"/>

    <ImageView
        android:id="@+id/rs_symbol"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/rupeesymbol"
        app:layout_constraintBottom_toBottomOf="@+id/slide_price"
        app:layout_constraintEnd_toStartOf="@+id/slide_price"
        app:layout_constraintTop_toBottomOf="@+id/slide_image"
        app:layout_constraintVertical_bias="0.754"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/slide_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slide_image"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/metropolis"
        android:text="399 / Year"
        android:textColor="@color/white"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="@+id/slide_image"
        app:layout_constraintStart_toStartOf="@+id/slide_image"
        app:layout_constraintTop_toBottomOf="@+id/slide_image" />


    <TableLayout
        android:id="@+id/tablelayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/slide_price"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="@+id/slide_price"
        app:layout_constraintStart_toStartOf="@+id/slide_price"
        app:layout_constraintTop_toBottomOf="@+id/slide_price"
        android:layout_marginRight="20dp">


        <TableRow>

            <ImageView
                android:id="@+id/check1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:src="@drawable/ic_baseline_check_24" />

            <TextView
                android:layout_width="match_parent"
                android:layout_column="2"
                android:text="No labour charges(up to 5-vists)"
                android:textColor="@color/white"
                android:fontFamily="@font/metropolis"
                android:layout_marginTop="3dp"></TextView>

        </TableRow>

        <TableRow android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/check2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:src="@drawable/ic_baseline_check_24" />

            <TextView
                android:layout_width="match_parent"
                android:layout_column="2"
                android:text="Attending faults within 12 HRS (SAME DAY VISIT)"
                android:textColor="@color/white"
                android:fontFamily="@font/metropolis"
                android:layout_marginTop="3dp"></TextView>

        </TableRow>

        <TableRow android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/check3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:src="@drawable/ic_baseline_check_24" />

            <TextView
                android:layout_width="match_parent"
                android:layout_column="2"
                android:text="25% cost reduction on AC shifting"
                android:textColor="@color/white"
                android:fontFamily="@font/metropolis"
                android:layout_marginTop="3dp"></TextView>

        </TableRow>

        <TableRow android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/check4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:src="@drawable/ic_baseline_check_24" />

            <TextView
                android:layout_width="match_parent"
                android:layout_column="2"
                android:text="FREE internal shifting"
                android:textColor="@color/white"
                android:fontFamily="@font/metropolis"
                android:layout_marginTop="3dp"></TextView>

        </TableRow>

        <TableRow android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/check5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:src="@drawable/ic_baseline_check_24" />

            <TextView
                android:layout_width="match_parent"
                android:layout_column="2"
                android:text="10% cost reduction on spares"
                android:textColor="@color/white"
                android:fontFamily="@font/metropolis"
                android:layout_marginTop="3dp"></TextView>

        </TableRow>


    </TableLayout>

    <Button
        android:layout_width="200dp"
        android:layout_height="65dp"
        android:layout_below="@id/tablelayout"
        android:layout_centerInParent="true"
        android:backgroundTint="#3A5FCD"
        android:elevation="25dp"
        android:fontFamily="@font/metropolis"
        android:text="SUBSCRIBE NOW"
        app:layout_constraintEnd_toEndOf="@+id/tablelayout"
        app:layout_constraintStart_toStartOf="@+id/tablelayout"
        app:layout_constraintTop_toBottomOf="@+id/tablelayout"
        android:layout_marginTop="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>